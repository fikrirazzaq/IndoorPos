<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/bottom_sheet_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_label_ap_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_sheet_top_padding"
            android:text="AP Deploy Position"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="AP-1"
                android:textColor="#f0ff00"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(" />

            <TextView
                android:id="@+id/tv_x1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", " />

            <TextView
                android:id="@+id/tv_y1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="AP-2"
                android:textColor="#FF00FF00"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(" />

            <TextView
                android:id="@+id/tv_x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", " />

            <TextView
                android:id="@+id/tv_y2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="AP-3"
                android:textColor="#FF0000FF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(" />

            <TextView
                android:id="@+id/tv_x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", " />

            <TextView
                android:id="@+id/tv_y3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_label_generated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_sheet_top_padding"
            android:layout_marginTop="@dimen/bottom_sheet_corner_radius"
            android:text="Generated by Formula"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="D1" />

            <TextView
                android:id="@+id/tv_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="D2" />

            <TextView
                android:id="@+id/tv_d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="D3" />

            <TextView
                android:id="@+id/tv_d3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="X-Target" />

            <TextView
                android:id="@+id/tv_x_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Y-Target" />

            <TextView
                android:id="@+id/tv_y_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D1" />
        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
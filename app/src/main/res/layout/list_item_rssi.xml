<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:elevation="5dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AP1"
                        android:textColor="#70c153"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_wifi"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_wifi_full" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tx_distance"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tx_distance_kalman"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_distance"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tx_distance_kalman_type_b"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_distance_kalman"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@color/colorAccent2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tx_distance_feedback"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tx_distance_kalman_type_b"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@color/colorAccent3"
                        android:textStyle="bold" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="name"
                        android:textAppearance="@android:style/TextAppearance.Material.Body2"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:id="@+id/tv_bssid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="safasdfasdfasdf"
                        android:textAppearance="@android:style/TextAppearance.Material.Body1"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:id="@+id/tv_rssi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="rssi"
                        android:textAppearance="@android:style/TextAppearance.Material.Caption"
                        android:textColor="@color/colorAccent"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:id="@+id/tv_rssi_kalman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="rssi"
                        android:textAppearance="@android:style/TextAppearance.Material.Caption"
                        android:textColor="@color/colorPrimaryDark"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:id="@+id/tv_rssi_kalman_type_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="rssi"
                        android:textAppearance="@android:style/TextAppearance.Material.Caption"
                        android:textColor="@color/colorAccent2"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:id="@+id/tv_rssi_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="rssi"
                        android:textAppearance="@android:style/TextAppearance.Material.Caption"
                        android:textColor="@color/colorAccent3"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:id="@+id/tv_cap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cap"
                        android:textAppearance="@android:style/TextAppearance.Material.Caption"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:id="@+id/tv_freq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="freq"
                        android:textAppearance="@android:style/TextAppearance.Material.Caption"
                        tools:targetApi="lollipop" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>